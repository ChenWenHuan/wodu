<?xml version='1.0' encoding='utf-8'?>
<widget id="com.easy.wodu" version="0.0.5" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>爱看书笔记</name>
    <description>
        一个读书记录APP，用来记录自己正在读/想读/读过的书
    </description>
    <author email="zhongzhu@ymail.com" href="https://github.com/zhongzhu/wodu">
        Zhu Zhong
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
<preference name="StatusBarOverlaysWebView" value="false" /> 
<preference name="StatusBarBackgroundColor" value="#000000" />
<preference name="StatusBarStyle" value="lightcontent" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- iPhone 6 Plus  -->
        <icon src="www/resources/icons/icon-60@3x.png" width="180" height="180" />
        <!-- iPhone 6 / 5 /4s  -->
        <icon src="www/resources/icons/icon-60@2x.png" width="120" height="120" />
        <icon src="www/resources/icons/icon-60.png" width="60" height="60" />
        <!-- iPhone / iPod Touch -->
        <icon src="www/resources/icons/icon.png" width="57" height="57" />
        <icon src="www/resources/icons/icon@2x.png" width="114" height="114" />   
        
        <!-- Spotlight search results Icon -->
        <icon src="www/resources/icons/icon-40.png" width="40" height="40" />
        <icon src="www/resources/icons/icon-40@2x.png" width="80" height="80" />
        <icon src="www/resources/icons/icon-40@3x.png" width="120" height="120" />
       
    </platform>
</widget>